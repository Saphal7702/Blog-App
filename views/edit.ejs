<%- include("partials/header") %>

<h1 class="compose-header">Edit your post</h1>
<form class="form-g" action="/editArticle/<%=post._id%>" method="post">
  <div class="form-group">
    <input class="form-control inp inp-h" type="text" name="title" value="<%=post.title%>" placeholder="Article Title">
    <textarea class="form-control inp" name="content" rows="10" cols="30" placeholder="Write your article"><%=post.content%></textarea>
    <input class="form-control inp" type="text" name="tag" value="<%=post.tag%>" placeholder="Enter tags (seprated by commas)">
  </div>
  <button class="btn btn-primary btn-lg" type="submit" name="button">Publish</button>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>

</html>
