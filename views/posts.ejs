<%- include("partials/header") %>

<div class="post-profile">
  <h1><%=post.title %></h1>
  <div class="">
    <img class="article-profile" src="<%= author.imageURL %>" alt="">
    <a class="profile-text-title" href="/userprofile/<%=author.username%>"><%=author.username%></a>
    <% if(currentuser === author.username){ %>
    <a href="/editArticle/<%=post._id%>" class="btn btn-outline-secondary">📝 Edit Article</a>
    <a href="/deleteArticle/<%=post._id%>" class="btn btn-outline-danger">Delete Article</a>
    <%  }      %>
  </div>
</div>

<div class="post-content">
  <p><%=post.dateCreated%></p>
  <p><%=post.content %></p>
  <hr>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<!-- <script src="index.js" charset="utf-8"></script> -->
</body>

</html>
